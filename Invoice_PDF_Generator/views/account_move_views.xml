<odoo>
    <data>
        <record id="view_move_form_inherit_pdf_generator" model="ir.ui.view">
            <field name="name">account.move.form.inherit.pdf.generator</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_generate_pdf" string="Generate PDF" type="object" attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('pdf_generated', '=', True)]}" class="oe_highlight"/>
                    <button name="action_generate_pdf" string="Descargar PDF" type="object" attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('pdf_generated', '=', False)]}" class="oe_highlight"/>
                </xpath>
                <xpath expr="//sheet" position="inside">
                    <group>
                        <field name="pdf_generated" invisible="1"/>
                        <field name="pdf_file" filename="pdf_filename" invisible="1"/>
                        <field name="pdf_filename" invisible="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>